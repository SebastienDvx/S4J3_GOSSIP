<h1>Index des gossips</h1>

<table>
  <tr>
    <th>Auteur</th>
    <th>Contenu</th>
    <th colspan="3"></th>
  </tr>

  <% @gossips.each do |gossip|  %>
    <tr>
      <td><%= gossip.anonymous_author %></td>
      <td><%= gossip.content %></td>
      <td><%= link_to("Voir", gossip_path(gossip))%></td>
      <td><%= link_to("Update", edit_gossip_path(gossip))%></td>
      <td><%= link_to 'Destroy', gossip_path(gossip),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

